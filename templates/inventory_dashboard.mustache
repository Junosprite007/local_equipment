{{!
    @template local_equipment/inventory_dashboard

    Inventory management dashboard template.

    Context variables required for this template:
    * summary - Object containing inventory summary statistics
    * actions - Array of action cards
    * quick_actions - Array of quick action cards

    Example context (json):
    {
        "summary": {
            "total_items": 150,
            "available": 120,
            "checked_out": 25,
            "in_transit": 3,
            "maintenance": 1,
            "damaged": 1,
            "recent_transactions": 15
        },
        "actions": [
            {
                "title": "Add Items",
                "description": "Add new equipment items to inventory",
                "url": "/local/equipment/inventory/add_items.php",
                "button_text": "Add Items",
                "button_class": "btn-success",
                "icon": "fa-plus"
            }
        ],
        "quick_actions": [
            {
                "title": "Generate QR Codes",
                "description": "Generate QR codes for equipment tracking",
                "url": "/local/equipment/inventory/generate_qr.php",
                "button_text": "Generate QR Codes",
                "button_class": "btn-primary",
                "icon": "fa-qrcode"
            }
        ]
    }
}}

<div class="inventory-dashboard">
    {{! Summary Cards Row }}
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fa fa-boxes me-2"></i>
                        {{#str}}totalitems, local_equipment{{/str}}
                    </h5>
                    <h2 class="card-text">{{summary.total_items}}</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fa fa-check-circle me-2"></i>
                        {{#str}}availableitems, local_equipment{{/str}}
                    </h5>
                    <h2 class="card-text">{{summary.available}}</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fa fa-user me-2"></i>
                        {{#str}}checkedoutitems, local_equipment{{/str}}
                    </h5>
                    <h2 class="card-text">{{summary.checked_out}}</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fa fa-truck me-2"></i>
                        {{#str}}intransititems, local_equipment{{/str}}
                    </h5>
                    <h2 class="card-text">{{summary.in_transit}}</h2>
                </div>
            </div>
        </div>
    </div>

    {{! Additional Status Cards Row }}
    {{#summary.maintenance}}
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-secondary">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fa fa-wrench me-2"></i>
                        {{#str}}maintenanceitems, local_equipment{{/str}}
                    </h5>
                    <h2 class="card-text">{{summary.maintenance}}</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fa fa-exclamation-triangle me-2"></i>
                        {{#str}}damageditems, local_equipment{{/str}}
                    </h5>
                    <h2 class="card-text">{{summary.damaged}}</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-dark">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fa fa-search me-2"></i>
                        {{#str}}lostitems, local_equipment{{/str}}
                    </h5>
                    <h2 class="card-text">{{summary.lost}}</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fa fa-history me-2"></i>
                        {{#str}}recenttransactions, local_equipment{{/str}}
                    </h5>
                    <h2 class="card-text">{{summary.recent_transactions}}</h2>
                    <small class="text-white-50">{{#str}}lastweek, local_equipment{{/str}}</small>
                </div>
            </div>
        </div>
    </div>
    {{/summary.maintenance}}

    {{! Management Actions Section }}
    <h3 class="mt-4 mb-3">{{#str}}managementactions, local_equipment{{/str}}</h3>
    <div class="row mb-4">
        {{#actions}}
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body text-center d-flex flex-column">
                    <h5 class="card-title">
                        {{#icon}}<i class="fa {{icon}} me-2"></i>{{/icon}}
                        {{title}}
                    </h5>
                    <p class="card-text flex-grow-1">{{description}}</p>
                    <a href="{{url}}" class="btn {{button_class}} mt-auto">
                        {{#icon}}<i class="fa {{icon}} me-2"></i>{{/icon}}
                        {{button_text}}
                    </a>
                </div>
            </div>
        </div>
        {{/actions}}
    </div>

    {{! Quick Actions Section }}
    <h3 class="mt-4 mb-3">{{#str}}quickactions, local_equipment{{/str}}</h3>
    <div class="row mb-4">
        {{#quick_actions}}
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body text-center d-flex flex-column">
                    <h5 class="card-title">
                        {{#icon}}<i class="fa {{icon}} me-2"></i>{{/icon}}
                        {{title}}
                    </h5>
                    <p class="card-text flex-grow-1">{{description}}</p>
                    <a href="{{url}}" class="btn {{button_class}} mt-auto">
                        {{#icon}}<i class="fa {{icon}} me-2"></i>{{/icon}}
                        {{button_text}}
                    </a>
                </div>
            </div>
        </div>
        {{/quick_actions}}
    </div>

    {{! Recent Activity Section }}
    {{#recent_activity}}
    <h3 class="mt-4 mb-3">{{#str}}recentactivity, local_equipment{{/str}}</h3>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>{{#str}}time, local_equipment{{/str}}</th>
                            <th>{{#str}}type, local_equipment{{/str}}</th>
                            <th>{{#str}}equipment, local_equipment{{/str}}</th>
                            <th>{{#str}}user, local_equipment{{/str}}</th>
                            <th>{{#str}}location, local_equipment{{/str}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#transactions}}
                        <tr>
                            <td>{{formatted_time}}</td>
                            <td>
                                <span class="badge {{type_badge_class}}">{{type_display}}</span>
                            </td>
                            <td>
                                <strong>{{product_name}}</strong>
                                {{#uuid}}<br><small class="text-muted">{{uuid_short}}</small>{{/uuid}}
                            </td>
                            <td>{{user_display}}</td>
                            <td>{{location_display}}</td>
                        </tr>
                        {{/transactions}}
                    </tbody>
                </table>
            </div>
            <div class="text-end mt-3">
                <a href="{{transactions_url}}" class="btn btn-outline-secondary btn-sm">
                    {{#str}}viewalltransactions, local_equipment{{/str}} â†’
                </a>
            </div>
        </div>
    </div>
    {{/recent_activity}}
</div>
