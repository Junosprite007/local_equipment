{{!
    @template local_equipment/vcc_actions_cell

    Template for the VCC summary page.

    Context variables:
    * edit_url -
    * delete_url -
    * confirm_delete -
}}

<div class="vcc-actions-cell">
    <div class="btn-group btn-group-sm" role="group" aria-label="{{#str}}actions, local_equipment{{/str}}">
        <a href="{{edit_url}}" class="btn btn-outline-primary btn-sm"
           title="{{#str}}edit, core{{/str}}" aria-label="{{#str}}edit, core{{/str}}">
            <i class="fa fa-edit" aria-hidden="true"></i>
        </a>
        <a href="{{delete_url}}" class="btn btn-outline-danger btn-sm"
           title="{{#str}}delete, core{{/str}}" aria-label="{{#str}}delete, core{{/str}}"
           onclick="return confirm('{{confirm_delete}}');">
            <i class="fa fa-trash" aria-hidden="true"></i>
        </a>
    </div>
</div>
