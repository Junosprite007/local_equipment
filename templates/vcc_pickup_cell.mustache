{{!
    @template local_equipment/vcc_pickup_cell

    Template for the VCC summary page.

    Context variables:
    * location -
    * method -
    * person_name -
    * person_phone -
}}

<div class="vcc-pickup-cell">
    {{#location}}
    <div class="pickup-location">
        <strong>{{#str}}location, local_equipment{{/str}}:</strong> {{location}}
    </div>
    {{/location}}
    {{#method}}
    <div class="pickup-method">
        <strong>{{#str}}method, local_equipment{{/str}}:</strong> {{method}}
    </div>
    {{/method}}
    {{#person_name}}
    <div class="pickup-person">
        <strong>{{#str}}person, local_equipment{{/str}}:</strong> {{person_name}}
        {{#person_phone}}
        <br><small class="text-muted">{{person_phone}}</small>
        {{/person_phone}}
    </div>
    {{/person_name}}
    {{^location}}{{^method}}{{^person_name}}
    <span class="text-muted">-</span>
    {{/person_name}}{{/method}}{{/location}}
</div>
