{{!
    @template local_equipment/vcc_table_toolbar

    Template for the VCC table toolbar with Bootstrap 5 styling.

    Context variables:
    * total_rows - Total number of submissions
    * current_pagesize - Current page size
    * pagesize_options - Array of page size options
    * pagesize_url - Base URL for changing page size
    * show_column_manager - Whether to show column management controls
}}

<div class="table-actions-toolbar d-flex justify-content-between align-items-center py-3 border-bottom mb-3">
    <div class="actions-left d-flex align-items-center gap-3">
        <p class="table-info text-muted mb-0">
            <i class="fa fa-table me-1" aria-hidden="true"></i>
            {{#str}}showingsubmissions, local_equipment, {{total_rows}}{{/str}}
        </p>
    </div>
    
    <div class="actions-right d-flex align-items-center gap-2">
        {{#show_column_manager}}
        <div class="btn-group">
            <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" title="{{#str}}managecolumns, local_equipment{{/str}}">
                <i class="fa fa-columns me-1" aria-hidden="true"></i>
                {{#str}}columns, local_equipment{{/str}}
            </button>
            <ul class="dropdown-menu" id="column-manager-dropdown">
                <!-- Column visibility controls will be populated by JavaScript -->
            </ul>
        </div>
        {{/show_column_manager}}
        
        <div class="input-group input-group-sm vcc-width-auto">
            <span class="input-group-text">
                <i class="fa fa-list-ol me-1" aria-hidden="true"></i>
                {{#str}}pagesize, local_equipment{{/str}}
            </span>
            <select class="form-select form-select-sm" id="pagesize-selector" data-base-url="{{pagesize_url}}" aria-label="{{#str}}selectpagesize, local_equipment{{/str}}">
                {{#pagesize_options}}
                <option value="{{value}}" {{#selected}}selected{{/selected}}>{{value}}</option>
                {{/pagesize_options}}
            </select>
        </div>
    </div>
</div>