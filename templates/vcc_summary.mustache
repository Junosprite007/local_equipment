{{!
    @template local_equipment/vcc_summary

    Template for the VCC summary page.

    Context variables:
    * confirm_delete -
}}

<div class="alert alert-info d-flex justify-content-between align-items-center" role="alert">
    <div>
        <i class="fa fa-info-circle me-2" aria-hidden="true"></i>
        {{#str}}showingsubmissions, local_equipment{{/str}}: <strong>{{total_count}}</strong>
    </div>
    {{#filters_applied}}
    <small class="text-muted">
        <i class="fa fa-filter me-1" aria-hidden="true"></i>
        {{#str}}filtered, local_equipment{{/str}}
    </small>
    {{/filters_applied}}
</div>
