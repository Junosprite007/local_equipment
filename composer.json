{
	"name": "local/equipment",
	"description": "Equipment management plugin for Moodle with AWS End User Messaging support",
	"type": "moodle-local",
	"require": {
		"php": ">=8.2",
		"aws/aws-sdk-php": "^3.354",
		"ext-json": "*",
		"ext-curl": "*",
		"ext-mbstring": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^11.0",
		"squizlabs/php_codesniffer": "^3.7"
	},
	"autoload": {
		"psr-4": {
			"local_equipment\\": "classes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"local_equipment\\tests\\": "tests/"
		}
	},
	"config": {
		"optimize-autoloader": true,
		"classmap-authoritative": true,
		"allow-plugins": {
			"composer/installers": true
		}
	},
	"minimum-stability": "stable",
	"prefer-stable": true
}
